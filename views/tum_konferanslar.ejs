<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tüm Konferanslar</title>
    <style>
        header {
            background-color: #f8f9fa;
            padding: 10px 0;
            margin-bottom: 20px;
        }
        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            text-align: center;
        }
        nav ul li {
            display: inline;
            margin-right: 10px;
        }
        nav ul li a {
            text-decoration: none;
            color: #000;
            padding: 5px 10px;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
        }
        .conference-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
        }
        .conference-item {
            width: 30%;
            margin-bottom: 20px;
            padding: 10px;
            border: 20px solid #ccc;
            border-radius: px;
        }
        .conference-item h2 {
            margin-top: 0;
        }
        .conference-item button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/tum_konferanslar">Tüm Konferanslar</a></li>
                <li><a href="#">Katıldığım Konferanslar</a></li>
                <li><a href="#">Oluşturduğum Konferanslar</a></li>
                <li><a href="#">Yazılarım</a></li>
                <li><a href="#">İncelemelerim</a></li>
            </ul>
        </nav>
    </header>
    
    <main>
        <h1>Tüm Konferanslar</h1>
        <div class="conference-grid">
            <% conferences.forEach(conference => { %>
                <div class="conference-item">
                    <h2><%= conference.name %></h2>
                    <p>ID: <%= conference._id %></p>
                    <p>Başlangıç Tarihi: <%= conference.startDate %></p>
                    <p>Bitiş Tarihi: <%= conference.endDate %></p>
                    <p>Adres: <%= conference.address %></p>

                    <% if (!conference.attendeeList.get(user._id)) { %>
                        <button onclick="katil('<%= conference._id %>', '<%= user._id %>')">Katıl</button>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </main>

    <script>
        function katil(conferenceId, userId) {
            console.log(conferenceId)
            console.log(userId)
            fetch(`/conference/${conferenceId}/user/${userId}/role/1`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({  })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Servis çağrısı başarısız!');
                }
                return response.json();
            })
            .then(data => {
                console.log(data);
                // Gerekirse başka işlemler yapabilirsiniz
            })
            .catch(error => {
                console.error('Hata:', error);
            });
        }
    </script>
</body>
</html>
