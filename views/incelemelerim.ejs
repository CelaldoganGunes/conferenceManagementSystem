<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yazılarım</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        header {
            background-color: #f8f9fa;
            padding: 10px 0;
            margin-bottom: 20px;
        }
        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            text-align: center;
        }
        nav ul li {
            display: inline;
            margin-right: 10px;
        }
        nav ul li a {
            text-decoration: none;
            color: #000;
            padding: 5px 10px;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
        }
        .conference-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
        }
        .conference-item {
            width: 30%;
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }
        .conference-item h2 {
            margin-top: 0;
        }
        .conference-item button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
        /* Modal styles */
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }
        .modal-content {
            background-color: #fefefe;
            margin: 15% auto; /* 15% from the top and centered */
            padding: 20px;
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/tum_konferanslar">Tüm Konferanslar</a></li>
                <li><a href="/katildigim_konferanslar">Katıldığım Konferanslar</a></li>
                <li><a href="/olusturdugum_konferanslar">Oluşturduğum Konferanslar</a></li>
                <li><a href="/yazilarim">Yazılarım</a></li>
                <li><a href="#">İncelemelerim</a></li>
                <li><a href="/cikis" class="logout-button">Çıkış Yap</a></li>
            </ul>
        </nav>
    </header>
    
    <main>
        <h1>İncelemelerim</h1>
        <div class="conference-grid">
            <% reviews.forEach(review => { %>
                <div class="conference-item">
                    <h2>Paper: <%= review.paper.title %></h2>
                    <% if(review.rate < 0) { %>
                        <p>İnceleme yapılması gerekiyor</p>
                        <button onclick="showReviewForm('<%= review._id %>')">İnceleme Ekle</button>
                    <% } else { %>
                        <p>Rate: <%= review.rate %>/10</p>
                        <p>Feedback: <%= review.feedback %></p>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </main>

    <!-- The Modal -->
    <div id="reviewModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <form action="" method="POST" id="reviewForm">
                <input type="hidden" id="reviewId" name="reviewId">
                <div>
                    <label for="rate">Puan:</label>
                    <input type="number" id="rate" name="rate" min="0" max="10" required>
                </div>
                <div>
                    <label for="feedback">Geri Bildirim:</label>
                    <textarea id="feedback" name="feedback" rows="4" cols="50" required></textarea>
                </div>
                <button type="submit">Gönder</button>
            </form>
        </div>
    </div>

    <script>
        // Get the modal
        var modal = document.getElementById("reviewModal");
        var form = document.getElementById("reviewForm");
        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];
        
        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
            modal.style.display = "none";
        }
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
        function showReviewForm(reviewId) {
            document.getElementById("reviewId").value = reviewId; // Update hidden input with the correct review ID
            modal.style.display = "block"; // Display the modal
            form.action = "/review/" + reviewId; // Update form action to submit to the correct URL
        }
    </script>
</body>
</html>
