<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yazılarım</title>
    <style>
        header {
            background-color: #f8f9fa;
            padding: 10px 0;
            margin-bottom: 20px;
        }
        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            text-align: center;
        }
        nav ul li {
            display: inline;
            margin-right: 10px;
        }
        nav ul li a {
            text-decoration: none;
            color: #000;
            padding: 5px 10px;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
        }
        .conference-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
        }
        .conference-item {
            width: 30%;
            margin-bottom: 20px;
            padding: 10px;
            border: 20px solid #ccc;
            border-radius: px;
        }
        .conference-item h2 {
            margin-top: 0;
        }
        .conference-item button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/tum_konferanslar">Tüm Konferanslar</a></li>
                <li><a href="/katildigim_konferanslar">Katıldığım Konferanslar</a></li>
                <li><a href="#">Oluşturduğum Konferanslar</a></li>
                <li><a href="/yazilarim">Yazılarım</a></li>
                <li><a href="#">İncelemelerim</a></li>
                <li><a href="/cikis" class="logout-button">Çıkış Yap</a></li>
            </ul>
        </nav>
    </header>
    
    <main>
        <h1>Yazılarım</h1>
        <button onclick="window.location.href='/yazi_yukle'">Yazı Yükle</button>
        <div class="conference-grid">
            <% papers.forEach(paper => { %>
                <div class="conference-item">
                    <h2><%= paper.title %></h2>
                    <p>ID: <%= paper._id %></p>
                    <% if (paper.conferenceId) { %>
                        <p id="conferenceName_<%= paper._id %>">Konferans Adı: Yükleniyor...</p>
                    <% } %>
                    <p>Özet: <%= paper.abstract %></p>
                    <p>Anahtar Kelimeler 31: <%= paper.keywords %></p>
                </div>
            <% }); %>
        </div>
    </main>
    
    <script>
        async function getConference(conferenceId, elementId) {
            try {
                const response = await fetch(`/conference/${conferenceId}`);
                if (response.ok) {
                    const data = await response.json();
                    document.getElementById(elementId).innerText = "Konferans Adı: " + data.name;
                } else {
                    throw new Error('Konferans bulunamadı.');
                }
            } catch (error) {
                console.error(error);
            }
        }
    
        // Her bir paper için konferans adını getir
        <% papers.forEach(paper => { %>
            <% if (paper.conferenceId) { %>
                getConference('<%= paper.conferenceId %>', 'conferenceName_<%= paper._id %>');
            <% } %>
        <% }); %>
    </script>
</body>
</html>
