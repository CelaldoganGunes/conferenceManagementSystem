<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Konferansları Yönet</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Stil dosyası yolu -->
</head>
<body>
    <h1>Konferansları Yönet</h1>
    <a href="/create-conference">Yeni Konferans Ekle</a>
    <table>
        <thead>
            <tr>
                <th>Konferans Adı</th>
                <th>Adres</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Katılımcı Sınırı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <% conferences.forEach(function(conference) { %>
                <tr>
                    <td><%= conference.name %></td>
                    <td><%= conference.address %></td>
                    <td><%= new Date(conference.startDate).toLocaleDateString() %></td>
                    <td><%= new Date(conference.endDate).toLocaleDateString() %></td>
                    <td><%= conference.attendeeLimit %></td>
                    <td>
                        <a href="/conference/edit/<%= conference._id %>">Düzenle</a>
                        <a href="/conference/delete/<%= conference._id %>" onclick="return confirm('Bu konferansı silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
