<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcıları Yönet</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Stil dosyası yolu -->
</head>
<body>
    <h1>Kullanıcıları Yönet</h1>
    <a href="/register">Yeni Kullanıcı Ekle</a>
    <table>
        <thead>
            <tr>
                <th>Kullanıcı Adı</th>
                <th>E-posta</th>
                <th>Rol</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td>
                        <a href="/user/edit/<%= user._id %>">Düzenle</a>
                        <a href="/user/delete/<%= user._id %>" onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
